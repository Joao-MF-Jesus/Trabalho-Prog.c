
#include <stdio.h>
#include <stdlib.h>
#include <string.h>

#define DATA_FILE "alunos.dat"

typedef struct {
    int matricula;
    char nome[50];
    char curso[30];
    int idade;
} Aluno;

void adicionarAluno();
void alterarAluno();
void excluirAluno();
void consultarAluno();
void listarAlunos();

int main() {
    int opcao;
    do {
        printf("\nSistema de Gerenciamento de Alunos\n");
        printf("1. Incluir um novo aluno\n");
        printf("2. Alterar informações de um aluno\n");
        printf("3. Excluir um aluno\n");
        printf("4. Consultar informações de um aluno\n");
        printf("5. Listar todos os alunos cadastrados\n");
        printf("0. Sair\n");
        printf("Escolha uma opção: ");
        scanf("%d", &opcao);
        getchar(); // Limpa o buffer

        switch(opcao) {
            case 1:
                adicionarAluno();
                break;
            case 2:
                alterarAluno();
                break;
            case 3:
                excluirAluno();
                break;
            case 4:
                consultarAluno();
                break;
            case 5:
                listarAlunos();
                break;
            case 0:
                printf("Encerrando o programa...\n");
                break;
            default:
                printf("Opção inválida!\n");
        }
    } while(opcao != 0);

    return 0;
}

void adicionarAluno() {
    Aluno aluno;
    FILE *fp = fopen(DATA_FILE, "ab");
    if (!fp) {
        printf("Erro ao abrir o arquivo!\n");
        return;
    }

    printf("Digite o número de matrícula: ");
    scanf("%d", &aluno.matricula);
    getchar(); // Limpa o buffer

    printf("Digite o nome do aluno: ");
    fgets(aluno.nome, sizeof(aluno.nome), stdin);
    aluno.nome[strcspn(aluno.nome, "\n")] = '\0';

    printf("Digite o curso do aluno: ");
    fgets(aluno.curso, sizeof(aluno.curso), stdin);
    aluno.curso[strcspn(aluno.curso, "\n")] = '\0';

    printf("Digite a idade do aluno: ");
    scanf("%d", &aluno.idade);

    fwrite(&aluno, sizeof(Aluno), 1, fp);
    fclose(fp);

    printf("Aluno adicionado com sucesso!\n");
}

void alterarAluno() {
    int matricula, encontrado = 0;
    Aluno aluno;
    FILE *fp = fopen(DATA_FILE, "rb+");
    if (!fp) {
        printf("Erro ao abrir o arquivo!\n");
        return;
    }

    printf("Digite o número de matrícula do aluno: ");
    scanf("%d", &matricula);
    getchar(); // Limpa o buffer

    while(fread(&aluno, sizeof(Aluno), 1, fp)) {
        if(aluno.matricula == matricula) {
            encontrado = 1;

            printf("Digite o novo nome do aluno: ");
            fgets(aluno.nome, sizeof(aluno.nome), stdin);
            aluno.nome[strcspn(aluno.nome, "\n")] = '\0';

            printf("Digite o novo curso do aluno: ");
            fgets(aluno.curso, sizeof(aluno.curso), stdin);
            aluno.curso[strcspn(aluno.curso, "\n")] = '\0';

            printf("Digite a nova idade do aluno: ");
            scanf("%d", &aluno.idade);

            fseek(fp, -sizeof(Aluno), SEEK_CUR);
            fwrite(&aluno, sizeof(Aluno), 1, fp);
            printf("Informações atualizadas com sucesso!\n");
            break;
        }
    }

    if (!encontrado)
        printf("Aluno não encontrado!\n");

    fclose(fp);
}

void excluirAluno() {
    int matricula, encontrado = 0;
    Aluno aluno;
    FILE *fp = fopen(DATA_FILE, "rb");
    FILE *temp = fopen("temp.dat", "wb");

    if (!fp || !temp) {
        printf("Erro ao abrir o arquivo!\n");
        return;
    }

    printf("Digite o número de matrícula do aluno a ser excluído: ");
    scanf("%d", &matricula);

    while(fread(&aluno, sizeof(Aluno), 1, fp)) {
        if(aluno.matricula == matricula) {
            encontrado = 1;
            continue; // Pula o registro a ser excluído
        }
        fwrite(&aluno, sizeof(Aluno), 1, temp);
    }

    fclose(fp);
    fclose(temp);

    remove(DATA_FILE);
    rename("temp.dat", DATA_FILE);

    if (encontrado)
        printf("Aluno excluído com sucesso!\n");
    else
        printf("Aluno não encontrado!\n");
}

void consultarAluno() {
    int matricula, encontrado = 0;
    Aluno aluno;
    FILE *fp = fopen(DATA_FILE, "rb");
    if (!fp) {
        printf("Erro ao abrir o arquivo!\n");
        return;
    }

    printf("Digite o número de matrícula do aluno: ");
    scanf("%d", &matricula);

    while(fread(&aluno, sizeof(Aluno), 1, fp)) {
        if(aluno.matricula == matricula) {
            encontrado = 1;
            printf("\n--- Dados do Aluno ---\n");
            printf("Matrícula: %d\n", aluno.matricula);
            printf("Nome: %s\n", aluno.nome);
            printf("Curso: %s\n", aluno.curso);
            printf("Idade: %d\n", aluno.idade);
            break;
        }
    }

    if (!encontrado)
        printf("Aluno não encontrado!\n");

    fclose(fp);
}

void listarAlunos() {
    Aluno aluno;
    FILE *fp = fopen(DATA_FILE, "rb");
    if (!fp) {
        printf("Erro ao abrir o arquivo!\n");
        return;
    }

    printf("\n--- Lista de Alunos ---\n");
    while(fread(&aluno, sizeof(Aluno), 1, fp)) {
        printf("\nMatrícula: %d\n", aluno.matricula);
        printf("Nome: %s\n", aluno.nome);
        printf("Curso: %s\n", aluno.curso);
        printf("Idade: %d\n", aluno.idade);
    }

    fclose(fp);
}
